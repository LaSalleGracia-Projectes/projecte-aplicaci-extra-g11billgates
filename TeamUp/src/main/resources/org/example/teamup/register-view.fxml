<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.teamup.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Text fx:id="textUser" text="Ingrese su nombre de usuario" />
    <TextField fx:id="nombreField"/>
    <Text fx:id="textEmail" text="Ingrese su correo eléctronico"/>
    <TextField fx:id="emailField" />
    <Text fx:id="textPassword" text="Ingrese su contraseña"/>
    <PasswordField fx:id="passwordField" />
    <Text fx:id="textPasswordConfirmation" text="Confirme su contraseña"/>
    <PasswordField fx:id="confirmPasswordField" />
    <Text fx:id="EdadText" text="indique su edad" />
    <TextField fx:id="edadField" />
    <ComboBox fx:id="regionField" onAction="#selectRegion" promptText="Seleccione una región" />
    <Hyperlink fx:id= "enlace_register" text="Si ya tienes una cuenta clica aquí" onAction="#switchToLogin"/>
    <Button text="Login" onAction="#handleRegister"/>
</VBox>
