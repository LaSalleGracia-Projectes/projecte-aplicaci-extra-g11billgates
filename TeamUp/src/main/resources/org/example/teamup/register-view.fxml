<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.teamup.ApplicationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Text fx:id="textUser" text="Ingrese su nombre de usuario" />
    <TextField fx:id="user"/>
    <Text fx:id="textEmail" text="Ingrese su correo eléctronico"/>
    <TextField fx:id="email" />
    <Text fx:id="textPassword" text="Ingrese su contraseña"/>
    <PasswordField fx:id="password" />
    <Text fx:id="textPasswordConfirmation" text="Confirme su contraseña"/>
    <TextField fx:id="passwordConfirmation" />
    <Text fx:id="regionText" text="indique su region" />
    <ComboBox fx:id="comboBox" onAction="#selectRegion" promptText="Seleccione una región" />
    <Text fx:id= "enlace_register" text="Si no te has registrado clica aquí" onMouseClicked="cambiarRegister"/>
    <Button text="Login" onAction="#onHelloButtonClick"/>
</VBox>
