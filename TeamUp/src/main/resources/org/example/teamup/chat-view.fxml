<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.teamup.ChatController">

    <!-- Barra lateral -->
    <left>
        <VBox spacing="20" prefWidth="220" styleClass="bg-danger" alignment="TOP_LEFT">
            <padding>
                <Insets top="30" bottom="30" left="20" right="10"/>
            </padding>

            <Button fx:id="inicioBtn" text="Inicio" styleClass="sidebar-btn" onAction="#irAInicio"/>
            <Button text="Match" styleClass="sidebar-btn"/>
            <Button fx:id="juegosBtn" text="Juegos" styleClass="sidebar-btn" onAction="#irAJuegos"/>
            <Button fx:id="chatsBtn" text="Chats" styleClass="sidebar-btn"/>
            <Button text="Perfil" styleClass="sidebar-btn"/>
        </VBox>
    </left>

    <!-- Barra superior -->
    <top>
        <HBox spacing="10" prefHeight="40" styleClass="top-bar" alignment="CENTER">
            <padding>
                <Insets top="5" bottom="5" left="15" right="15"/>
            </padding>

            <Label text="🔔" styleClass="top-button"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="TeamUp" styleClass="top-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="⚙" styleClass="top-button"/>
        </HBox>
    </top>

    <!-- Centro con mensajes -->
    <center>
        <VBox spacing="10" alignment="TOP_LEFT">
            <!-- Contenedor con foto y nombre -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #f9f9f9;">
                <padding>
                    <Insets top="10" bottom="10" left="20" right="20"/>
                </padding>
                <ImageView fx:id="fotoUsuario" fitWidth="50" fitHeight="50" preserveRatio="true"/>
                <Label fx:id="nombreUsuarioLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Área de mensajes con scroll -->
            <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
                <content>
                    <VBox fx:id="mensajesContainer" spacing="10">
                        <padding>
                            <Insets top="20" bottom="20" left="20" right="20"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Pie con campo y botón de envío alineados -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
            <!-- Padding para evitar solapamiento con la barra lateral -->
            <padding>
                <Insets top="10" bottom="10" left="240" right="20"/>
            </padding>
            <TextField fx:id="mensajeField" promptText="Escribe tu mensaje..." HBox.hgrow="ALWAYS" styleClass="input-large"/>
            <Button fx:id="enviarBtn" text="Enviar" styleClass="btn, btn-danger, btn-lg"/>
        </HBox>
    </bottom>

</BorderPane>
